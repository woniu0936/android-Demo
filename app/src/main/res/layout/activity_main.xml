<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.woniu.demo.MainActivity">

    <Button
        android:id="@+id/tvConstraintLayout"
        style="@style/Main_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ConstraintLayout Demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tvExoPlayer"
        style="@style/Main_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ExoPlayer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConstraintLayout" />

    <Button
        android:id="@+id/tvFragment"
        style="@style/Main_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="test fragment int XML"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExoPlayer" />

</android.support.constraint.ConstraintLayout>
